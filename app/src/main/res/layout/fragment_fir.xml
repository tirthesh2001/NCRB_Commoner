<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FIR.FIRFragment">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="#ffe6e6">

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:hint="@string/enter_full_name"
        android:id="@+id/edit_name"
        android:textAlignment="center"
        android:textColorHint="#797985"
        android:background="@drawable/edittxt_commonerlogin"
        android:layout_marginTop="70dp"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:hint="Enter Number"
            android:id="@+id/edit_number"
            android:textAlignment="center"
            android:textColorHint="#797985"
            android:layout_below="@+id/edit_name"
            android:background="@drawable/edittxt_commonerlogin"
            android:layout_marginTop="40dp"/>

       <TextView
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:id="@+id/suspect_txt"
           android:text="Suspected Person:"
           android:textSize="20dp"
           android:layout_centerHorizontal="true"
           android:layout_below="@+id/edit_number"
           android:layout_marginTop="40dp"/>

       <EditText
           android:layout_width="300dp"
           android:layout_height="50dp"
           android:layout_centerHorizontal="true"
           android:id="@+id/edit_suspect"
           android:textAlignment="center"
           android:textColorHint="#797985"
           android:layout_below="@+id/suspect_txt"
           android:background="@drawable/edittxt_commonerlogin"
           android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/statement_txt"
        android:text="Statement:"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edit_suspect"
        android:layout_marginTop="40dp"/>

    <EditText
        android:lines="4"
        android:gravity="top|left"
        android:id="@+id/statement_edit"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@+id/statement_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittxt_commonerlogin"
        android:textColorHint="#797985" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statement_edit"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_commoner_Login"
        android:textColor="@color/white"
        android:text="@string/submit_btn"
        android:background="@drawable/btn_red2"
        android:layout_marginBottom="70dp"/>

   </RelativeLayout>
</ScrollView>